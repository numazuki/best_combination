<div class="mt-3 mb-5">
  <p class="title shadow-sm p-3 mb-4 mt-3 bg-light rounded text-center h6"><%=user.name%><span class="ml-2">'s  ページ</span></p>
  <div class="d-flex d-row">
    <div class="col-3 text-center">
      <% if user.img? %>
        <%= image_tag user.img.thumb50.url %>
      <%else%>
        <%= image_tag "default.jpg", :size => '100x100' %>
      <% end %>
    </div>
    <div class="col-9">
      <div class="p-2 box mb-3">
        <p class="font-weight-bold">Introduce</p>
        <p class="" style="word-wrap: break-word"><%=simple_format(user.introduce)%></p>
      </div>
      <div class="mt-2 d-flex justify-content-between">
        <%if user==current_user%>
          <p><%=link_to '編集する',edit_user_path(user),class:'bbb'%></p>
        <%end%>
        <p><%=link_to 'Fav一覧',favorites_user_path(user),class:'bbb'%></p>
      </div>
    </div>
  </div>
</div>
