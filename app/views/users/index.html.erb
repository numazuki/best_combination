<% if @users.any? %>
  <ul class="list-unstyled">
    <% @users.each do |user| %>
      <li class="border row col-sm-8 ml-auto mr-auto mt-3">
        <div class="col-sm-2 ml-auto mr-auto mt-2">
          <% if user.img? %>
            <%= image_tag user.img.thumb50.url %>
          <%else%>
            <%= image_tag "default.jpg", :size => '50x50' %>
          <% end %>          
        </div>

        <div class="col-sm-8 ml-sm-2">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィールへ', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  <div class="mt-4">
    <%= paginate @users %>
  </div>
  </ul>
  
<% end %>
